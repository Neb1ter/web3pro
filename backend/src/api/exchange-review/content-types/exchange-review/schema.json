    "google_play_url": {
      "type": "string",
      "maxLength": 500
    },
    "trading_fee_maker": {
      "type": "string",
      "maxLength": 50
    },
    "trading_fee_taker": {
      "type": "string",
      "maxLength": 50
    },
    "withdrawal_fee_note": {
      "type": "string",
      "maxLength": 200
    },
    "min_deposit": {
      "type": "string",
      "maxLength": 100
    },
    "supported_countries": {
      "type": "text"
    },
    "restricted_countries": {
      "type": "text"
    },
    "kyc_required": {
      "type": "boolean",
      "default": true
    },
    "supports_fiat": {
      "type": "boolean",
      "default": true
    },
    "supports_futures": {
      "type": "boolean",
      "default": false
    },
    "supports_margin": {
      "type": "boolean",
      "default": false
    },
    "supports_copy_trading": {
      "type": "boolean",
      "default": false
    },
    "supports_staking": {
      "type": "boolean",
      "default": false
