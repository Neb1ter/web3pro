{
  "kind": "collectionType",
  "collectionName": "exchange_reviews",
  "info": {
    "singularName": "exchange-review",
    "pluralName": "exchange-reviews",
    "displayName": "交易所评测 Exchange Review",
    "description": "交易所详细评测，包含评分、返佣信息和多语言支持"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "name_en": {
      "type": "string",
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name_en",
      "maxLength": 100,
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "banner_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "exchange_type": {
      "type": "enumeration",
      "enum": [
        "cex",
        "dex",
        "hybrid"
      ],
      "default": "cex"
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "rating_security": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "rating_fees": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "rating_ux": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "rating_liquidity": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "pros_zh": {
      "type": "text"
    },
    "pros_en": {
      "type": "text"
    },
    "cons_zh": {
      "type": "text"
    },
    "cons_en": {
      "type": "text"
    },
    "description_zh": {
      "type": "richtext"
    },
    "description_en": {
      "type": "richtext"
    },
    "short_desc_zh": {
      "type": "string",
      "maxLength": 200
    },
    "short_desc_en": {
      "type": "string",
      "maxLength": 200
    },
    "rebate_rate": {
      "type": "string",
      "maxLength": 50
    },
    "rebate_rate_display_zh": {
      "type": "string",
      "maxLength": 100
